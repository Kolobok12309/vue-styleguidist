{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"types": ["cypress"],
		"baseUrl": ".",
		"paths": {
			"rsg-components/*": [
				"packages/vue-styleguidist/src/client/rsg-components/*",
				"packages/vue-styleguidist/node_modules/react-styleguidist/lib/client/rsg-components/*"
			]
		},
		"sourceMap": true
	},
	"include": [
		"test/cypress/**/*.tsx",
		"test/cypress/**/*.ts",
		"**/*.cy.*",
		"packages/vue-styleguidist/src/client/rsg-components/**/*.*",
		"node_modules/react-styleguidist/lib/client/rsg-components/**/*.*",
		"packages/vue-styleguidist/src/**/*.ts"
	],
	"exclude": ["**/*.{spec,test}.ts"]
}
